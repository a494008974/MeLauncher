<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/dp_60"
    android:paddingRight="@dimen/dp_60"
    android:layout_height="@dimen/dp_60">

    <ImageView
        android:id="@+id/launcher_logo"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/launcher_message"
        android:layout_width="0dp"
        android:layout_weight="4"
        android:gravity="center"
        android:textSize="@dimen/sp_18"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/launcher_layout_status"
        android:layout_width="0dp"
        android:layout_weight="1.5"
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/launcher_status_week"
            android:layout_width="wrap_content"
            android:gravity="right|center"
            android:textSize="@dimen/sp_18"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/launcher_statu_time"
            android:layout_width="wrap_content"
            android:gravity="right|center"
            android:textSize="@dimen/sp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/launcher_status_net"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center"
            android:alpha="0.8"/>
    </LinearLayout>

</LinearLayout>