<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_160"
    android:background="@drawable/module_store_grid_item_background"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:padding="@dimen/dp_20">

    <ImageView
        android:id="@+id/app_grid_icon"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_120"
        android:layout_marginRight="@dimen/dp_10"
        android:src="@drawable/module_store_grid_item_background" />

    <TextView
        android:id="@+id/app_grid_title"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textSize="@dimen/sp_22"
        app:layout_constraintStart_toStartOf="@+id/app_grid_version"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/app_grid_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_grid_title"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/module_store_grid_item_version"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/dp_5"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:paddingTop="@dimen/dp_5"
        android:singleLine="true"
        android:text="@string/module_store_app_name"
        android:textSize="@dimen/sp_16"
        app:layout_constraintBottom_toBottomOf="@+id/app_grid_icon"
        app:layout_constraintStart_toEndOf="@+id/app_grid_icon" />

</android.support.constraint.ConstraintLayout>